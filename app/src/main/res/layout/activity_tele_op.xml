                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                />

            <!--        algae process attempted -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/algae"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintWidth_percent="0.5"
                android:divider="@drawable/horizontal_padding_small"
                android:showDividers="middle">

                <Button
                    android:id="@+id/up_count_button_pa"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="2dp"
                    android:insetBottom="2dp"
                    android:text="@string/counter_up"

                    />


                <TextView
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:text="@string/algae_processor_attempted" />

                <EditText
                    android:id="@+id/edit_text_pa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:hint="@string/number_tried"
