                    android:id="@+id/edit_text_ps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:hint="@string/number_tried"
                    android:inputType="number"
                    android:minWidth="32dp"
                    android:minHeight="48dp" />
                <Button
                    android:id="@+id/down_count_button_ps"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="2dp"
                    android:insetBottom="2dp"
                    android:text="@string/counter_down"
                    />

            </LinearLayout>


<!--            algae barge attempted -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintWidth_percent="0.5"
                android:divider="@drawable/horizontal_padding_small"
                android:showDividers="middle">

                <Button
                    android:id="@+id/up_count_button_ba"
