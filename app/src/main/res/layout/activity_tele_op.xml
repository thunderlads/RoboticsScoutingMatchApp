                            android:minWidth="32dp"
                            android:minHeight="48dp" />
                        <Button
                            android:id="@+id/down_count_button_rc4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetTop="2dp"
                            android:insetBottom="2dp"
